<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ChangePasswordActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        app:titleTextColor="@android:color/white"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <TextView
        android:id="@+id/text_change_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/change_password"
        android:visibility="gone"
        android:fontFamily="@font/quicksandregular"
        android:textSize="17sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="@id/toolbar"
        app:layout_constraintLeft_toLeftOf="parent"/>

        <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_change_password"
        android:layout_width="180dp"
        android:layout_height="121dp"
        android:layout_marginTop="21dp"
        android:src="@drawable/changepassword"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_text_change_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_change_password">

    <TextView
        android:id="@+id/change_password_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change_password_description"
        android:textSize="13.5sp"
        android:fontFamily="@font/quicksandregular"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/old_password_text"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/quicksandregular"
        android:hint="@string/enter_old_password"
        android:textSize="15sp"
        android:inputType="textPassword"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constraint_text_change_password"
        app:met_floatingLabel="highlight" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/new_password_text"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="@string/new_password"
        android:textSize="15sp"
        android:fontFamily="@font/quicksandregular"
        android:inputType="textPassword"
        app:met_floatingLabel="highlight"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/old_password_text"/>

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_maker"
        android:text="@string/change_password"
        android:visibility="gone"
        android:textColor="@android:color/white"
        android:fontFamily="@font/quicksandbold"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/new_password_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <CheckBox
        android:id="@+id/show_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:text="@string/show_password"
        android:textColor="@android:color/black"
        android:fontFamily="@font/quicksandregular"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/new_password_text"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_change_password"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:fabCustomSize="50dp"
        android:layout_marginTop="21dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="30dp"
        android:src="@drawable/ic_arrow"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/show_password"/>

    <TextView
        android:id="@+id/text_change_password2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginStart="30dp"
        android:text="@string/change_password"
        android:fontFamily="@font/quicksandbold"
        android:textSize="17sp"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/show_password"/>

    <!--
    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@android:color/transparent"
        android:textAllCaps="false"
        android:text="@string/cancel"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:fontFamily="@font/quicksandbold"
        app:layout_constraintTop_toBottomOf="@id/btn_change_password"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
     -->
</androidx.constraintlayout.widget.ConstraintLayout>